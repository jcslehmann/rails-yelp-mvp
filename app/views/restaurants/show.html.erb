<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>


<p>
  <strong>Reviews:</strong>
  <% @restaurant.reviews.each do |review| %>
    <li><%= link_to review.content, restaurant_review_path(review) %></li>
  <% end %>
</p>

<%= link_to "New Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

<%= link_to "Home", restaurants_path, class: "btn btn-primary"%>
